@model List<BE_Project_29_07_02_08.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<h1>Products List</h1>
<a href="@Url.Action("CreateProducts", "Products")" class="btn btn-success">Create New Product</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Delivery Time (min)</th>
            <th>Image</th>
            <th>Ingredients</th>
            <th>Add to Cart</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.IdProduct</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.DeliveryTimeMin</td>
                <td>
                    @if (product.Image != null && product.Image.Length > 0)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(product.Image)" alt="@product.Name" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    @if (product.Ingredients.Any())
                    {
                        <ul>
                            @foreach (var ingredient in product.Ingredients)
                            {
                                <li>@ingredient.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No ingredients</span>
                    }
                </td>
                <td>
                    <form asp-action="AddToCart" asp-controller="Cart" method="post">
                        <input type="hidden" name="productId" value="@product.IdProduct" />
                        <input type="number" name="quantity" value="1" min="1" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


