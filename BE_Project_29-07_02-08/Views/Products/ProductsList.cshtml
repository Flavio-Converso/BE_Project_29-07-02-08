@model List<BE_Project_29_07_02_08.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<h1>Products List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Delivery Time (min)</th>
            <th>Ingredients</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.IdProduct</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.DeliveryTimeMin</td>
                <td>
                    @if (product.Ingredients.Any())
                    {
                        <ul>
                            @foreach (var ingredient in product.Ingredients)
                            {
                                <li>@ingredient.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No ingredients</span>
                    }
                </td>
               
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateProducts", "Products")" class="btn btn-success">Create New Product</a>
